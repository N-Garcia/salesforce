public class AccountHandler {
    public static Account insertNewAccount(String accName) {
        Account newAcc = new Account(name=AccName);
        try {        	
        	insert newAcc;
        } catch (DmlException e) {
    		System.debug('A DML exception has occurred: ' +
                e.getMessage());
            return null;
		}
		return newAcc;        
    }
}
